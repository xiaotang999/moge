}
.piaochuan1{
    background: red;
    position: fixed;
    bottom: 0;
    left: 0;
	z-index: 99;
}
.close1{
	position: absolute;
    top: -8px;
    right: -3px;
    font-size: 14px;
    border-radius: 10px;
    background: #3b3b3b;
    width: 20px;
    height: 20px;
    text-align: center;
    line-height: 20px;
    cursor:pointer;
    color:#fff;
}
