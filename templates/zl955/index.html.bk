	background: #d9cab5;
}
.bg{
	width: 940px;
	background: #fff;
	margin: 0 auto;
}
.main{
	width: 900px;
	margin: 0 auto;
	background: #fff;
}
.main .logo>img{
	width: 100%;

	margin-bottom: 5px;
}
.main .aqq a img{
	width: 900px;
        z-index:99;
	margin-bottom: 5px;
}
.open{
	background:#fff;
}
.open table.open-desc{
	border:2px solid;
	width: 100%;
}
.open table.open-desc td{
	border:2px solid #b2b2b2;
	padding: 1px 3px;
}
.open .open-top{
	
	background-color: #00cc99;
	border: 1px solid #000;
	font-size : 16px;
	padding-top: 10px;
	padding-bottom: 10px;
	margin-bottom: 5px;
}
.bottom table td{
	border:2px solid #00ff00;
	padding: 1px 3px;
	font-size: 12pt!important;
}
.bottom table td span{
	font-size: 14px!important;
}
.bottom .explain{
	padding-bottom: 10px;
	font-style: 12px;
}
.news{
	position:relative;
}
.news-open{
    font-size: 40px;
    font-weight: bold;
    text-align: center;
    padding: 10px;
    background: #de5225;
    margin-bottom: 5px;
    height: 105px;
}
.news table{
	border: 1px solid #000;
}
.news table td{
	border: 1px solid #000;
	padding: 2px 1px;
